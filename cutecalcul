  <title>Fluffy BMI Calculator ✨</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&display=swap');
    
    body {
      font-family: 'Baloo 2', cursive;
      background: linear-gradient(45deg, #ffcce6, #ffb3d9, #ff99cc);
      color: #d23369;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      overflow: hidden;
      position: relative;
    }

    h1 {
      font-size: 2.5em;
      margin-bottom: 20px;
      color: #d23369;
      text-shadow: 3px 3px 0px #ffb6c1;
      font-weight: bold;
      position: relative;
    }

    .star {
      position: absolute;
      font-size: 0.8em;
      animation: twinkle 1.5s infinite alternate;
    }

    @keyframes twinkle {
      0% { opacity: 0.3; transform: scale(0.8); }
      100% { opacity: 1; transform: scale(1.2); }
    }

    .input-group {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: rgba(255, 255, 255, 0.7);
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(255, 105, 180, 0.3);
    }

    input {
      padding: 12px;
      margin: 10px;
      border-radius: 15px;
      border: 3px solid #ffb6c1;
      background-color: #fff0f5;
      font-size: 1.1em;
      text-align: center;
      width: 200px;
    }

    button {
      background: linear-gradient(45deg, #ff69b4, #ff8fab);
      color: white;
      border: none;
      padding: 12px 25px;
      font-size: 1.2em;
      border-radius: 25px;
      cursor: pointer;
      margin-top: 15px;
      box-shadow: 0 4px 10px rgba(255, 105, 180, 0.4);
      transition: all 0.3s ease;
    }

    button:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 15px rgba(255, 105, 180, 0.6);
    }

    .result {
      margin-top: 25px;
      font-size: 1.3em;
      text-align: center;
      max-width: 400px;
      background-color: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0 5px 15px rgba(255, 105, 180, 0.2);
      position: relative;
    }

    .result:before {
      content: "";
      position: absolute;
      top: -15px;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 0;
      border-left: 15px solid transparent;
      border-right: 15px solid transparent;
      border-bottom: 15px solid rgba(255, 255, 255, 0.8);
    }

    .confetti {
      position: absolute;
